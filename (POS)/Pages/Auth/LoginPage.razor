@page "/Login"

<div class="login-container">
    <div class="user-avatar">
        <i class="fa fa-user-circle"></i> <!-- Use a Font Awesome user icon or an icon of your choice -->
    </div>
    <div class="pin-entry">
        <input type="password" id="pinInput" @bind="pin" placeholder="Enter your PIN" class="password-input" />
    </div>
    <div class="keypad">
        @for (int i = 1; i <= 9; i++)
        {
            <button @onclick="() => AddToPin(i)">@i</button>
        }
    </div>
    <button class="login-button" @onclick="Login">Login</button>
</div>

@code {
    string pin = "";

    void AddToPin(int number)
    {
        pin += number.ToString();
    }

    void Login()
    {
        // Implement your login logic here
    }
}


